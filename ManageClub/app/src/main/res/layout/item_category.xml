<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_150"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/cv_category_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_category_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_category_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_category_id"
            android:fontFamily="@font/novecentosans_medium"
            android:text="@string/category"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorDarkPurple"
            android:textAlignment="center"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>